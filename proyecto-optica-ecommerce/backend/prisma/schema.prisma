generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENTE
  ADMIN
  SUPER_ADMIN
}

enum EstadoCuenta {
  ACTIVO
  INACTIVO
  BLOQUEADO
  PENDIENTE
  ELIMINADO
}

enum NivelCliente {
  NUEVO
  REGULAR
  FRECUENTE
  VIP
  PLATINUM
}

enum Categoria {
  MONTURAS_SOL
  MONTURAS_OFTALMICA
  LENTES_CONTACTO
  ACCESORIOS
}

enum EstadoOrden {
  PENDIENTE_PAGO
  PAGADO
  PROCESANDO
  LISTO_PARA_ENVIO
  ENVIADO
  EN_DISTRIBUCION
  ENTREGADO
  CANCELADO
  DEVOLUCION
  REEMBOLSADO
}

enum EstadoPago {
  PENDIENTE
  APROBADO
  RECHAZADO
  REEMBOLSADO
}

enum MetodoPago {
  TARJETA_CREDITO
  TARJETA_DEBITO
  PSE
  EFECTIVO_CONTRAENTREGA
  TRANSFERENCIA
}

model User {
  id              String        @id @default(cuid())
  email           String        @unique
  name            String
  password        String
  phone           String?
  role            Role          @default(CLIENTE)
  estado          EstadoCuenta  @default(ACTIVO)
  nivelCliente    NivelCliente  @default(NUEVO)
  
  // Verificaciones
  emailVerified   Boolean       @default(false)
  emailVerifiedAt DateTime?
  phoneVerified   Boolean       @default(false)
  
  // Seguridad
  lastLogin       DateTime?
  loginAttempts   Int           @default(0)
  blockedAt       DateTime?
  blockedBy       String?
  motivoBloqueo   String?
  
  // Soft delete
  deletedAt       DateTime?
  deletedBy       String?
  
  // Notas admin
  notasInternas   String?       @db.Text
  etiquetas       String[]
  
  // Estadísticas
  totalCompras    Int           @default(0)
  totalGastado    Float         @default(0)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  orders          Order[]
  addresses       Address[]
  cart            Cart?

  @@index([email])
  @@index([role])
  @@index([estado])
  @@index([nivelCliente])
  @@index([createdAt])
}

model Category {
  id          String     @id @default(cuid())
  nombre      Categoria
  descripcion String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  products    Product[]
}

model Product {
  id            String   @id @default(cuid())
  sku           String   @unique
  nombre        String
  marca         String
  categoria     Categoria
  precio        Float
  descuento     Float?
  imagenes      String[]
  descripcion   String
  caracteristicas Json // {material, color, forma, genero, etc}
  stock         Int
  activo        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  categoryId    String
  category      Category @relation(fields: [categoryId], references: [id])
  orderItems    OrderItem[]
  cartItems     CartItem[]
  inventory     Inventory?
}

model Inventory {
  id          String   @id @default(cuid())
  productId   String   @unique
  stock       Int
  stockMinimo Int      @default(5)
  updatedAt   DateTime @updatedAt
  product     Product  @relation(fields: [productId], references: [id])
}

model Order {
  id                   String      @id @default(cuid())
  numero               String      @unique
  userId               String
  subtotal             Float
  descuento            Float       @default(0)
  costoEnvio           Float       @default(0)
  total                Float
  estadoPedido         EstadoOrden @default(PENDIENTE_PAGO)
  estadoPago           EstadoPago  @default(PENDIENTE)
  direccionEnvio       Json
  metodoPago           MetodoPago
  
  // Logística
  transportadora       String?
  numeroGuia           String?
  fechaEstimadaEntrega DateTime?
  fechaEntregaReal     DateTime?
  
  // Notas
  notasCliente         String?
  notasInternas        String?
  
  // Auditoría
  historialEstados     Json[]
  procesadoPor         String?
  canceladoPor         String?
  motivoCancelacion    String?
  
  // Timestamps
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  fechaPago            DateTime?
  fechaEnvio           DateTime?
  fechaEntrega         DateTime?
  
  user                 User        @relation(fields: [userId], references: [id])
  items                OrderItem[]

  @@index([userId])
  @@index([estadoPedido])
  @@index([estadoPago])
  @@index([createdAt])
  @@index([numero])
}

model OrderItem {
  id          String @id @default(cuid())
  orderId     String
  productId   String
  cantidad    Int
  precioUnit  Float
  subtotal    Float
  order       Order   @relation(fields: [orderId], references: [id])
  product     Product @relation(fields: [productId], references: [id])
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  items     CartItem[]
}

model CartItem {
  id        String @id @default(cuid())
  cartId    String
  productId String
  cantidad  Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model Address {
  id        String   @id @default(cuid())
  userId    String
  nombre    String
  direccion String
  ciudad    String
  telefono  String
  esDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}
